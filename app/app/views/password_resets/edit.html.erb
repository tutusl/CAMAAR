<div class="body-alterar-senha-container">
  <div class="container">
    <h1 class="form-login-header">Redefinir Senha</h1>
    <div class="form-login-group">
      <%= form_with model: @usuario, url: update_password_reset_path(params[:user]), method: :patch, html: {class: "form-login"} do |f| %>
        <div class="form-group">
          <%= f.label :password, "Nova Senha" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmar Nova Senha" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Atualizar Senha", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>