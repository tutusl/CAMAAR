<%= render 'shared/sidebar' %>
<div class="container-templates">
  <h2>Criar Novo Formulário</h2>

  <%= form_with(model: @formulario, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :template_id, "Selecione um Template" %>
      <%= form.collection_select :template_id, @templates, :id, :nomeTemplate, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :tipoDestinatario, "Tipo de Destinatário" %>
      <%= form.select :tipoDestinatario, options_for_select(["Alunos", "Professores"]), {}, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Criar Formulário', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>