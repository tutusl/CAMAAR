<div class="container">
  <h1>Login</h1>
  <%= form_with(url: sessions_path, method: :post, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Digite seu email", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :password, "Senha" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Digite sua senha", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, "Confirme sua senha" %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirme sua senha", required: true %>
    </div>
    <div class="form-group">
      <%= form.submit "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
