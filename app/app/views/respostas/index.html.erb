<%= render 'shared/sidebar' %>

<div class="container-respostas">
  <h2>Resultados das Avaliações</h2>

  <% if @turmas.any? %>
    <div class="row">
      <% @turmas.each do |turma| %>
        <div class="col-md-4">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= turma.codigo_disciplina.nomeDisciplina %> - <%= turma.codigoTurma %></h5>
              <p class="card-text">Semestre: <%= turma.semestre %></p>
              <p class="card-text">Professor: <%= turma.usuario_turmas.find_by(papel: 'professor').usuario.nome %></p>
              <%= link_to "Ver Detalhes", resposta_path(turma.formularios.first), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      <p>Sem formulários disponíveis</p>
    </div>
  <% end %>
</div>
